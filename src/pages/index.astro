<script>
// Interactive Interest Graph
document.addEventListener('DOMContentLoaded', function() {
    const toggleButtons = document.querySelectorAll('.graph-toggle button');
    const linearPath = document.getElementById('linearPath');
    const compoundPath = document.getElementById('compoundPath');
    const compoundPoints = document.getElementById('compoundPoints');
    const simplePoints = document.getElementById('simplePoints');
    const resultText = document.getElementById('resultText');
    const tooltip = document.getElementById('graphTooltip');
    const dataPoints = document.querySelectorAll('.data-point');

    const results = {
        compound: 'Efter 20 år: 132 665 kr',
        simple: 'Efter 20 år: 100 000 kr',
        both: 'Skillnad: 32 665 kr mer med ränta-på-ränta'
    };

    // Toggle button functionality
    toggleButtons.forEach(button => {
        button.addEventListener('click', function() {
            toggleButtons.forEach(btn => btn.classList.remove('active'));
            this.classList.add('active');

            const mode = this.getAttribute('data-mode');

            if (mode === 'compound') {
                linearPath.style.opacity = '0.2';
                compoundPath.style.opacity = '1';
                compoundPoints.style.opacity = '1';
                simplePoints.style.opacity = '0';
                resultText.textContent = results.compound;
                resultText.style.fill = '#1e3a5f';
            } else if (mode === 'simple') {
                linearPath.style.opacity = '1';
                compoundPath.style.opacity = '0.2';
                compoundPoints.style.opacity = '0';
                simplePoints.style.opacity = '1';
                resultText.textContent = results.simple;
                resultText.style.fill = '#94a3b8';
            } else if (mode === 'both') {
                linearPath.style.opacity = '1';
                compoundPath.style.opacity = '1';
                compoundPoints.style.opacity = '1';
                simplePoints.style.opacity = '1';
                resultText.textContent = results.both;
                resultText.style.fill = '#1e3a5f';
            }
        });
    });

    // Tooltip functionality for data points
    dataPoints.forEach(point => {
        point.addEventListener('mouseenter', function(e) {
            const year = this.getAttribute('data-year');
            const amount = this.getAttribute('data-amount');
            tooltip.textContent = `År ${year} → ${amount} kr`;
            tooltip.style.opacity = '1';
        });

        point.addEventListener('mousemove', function(e) {
            const graphContainer = document.querySelector('.graph-container');
            const rect = graphContainer.getBoundingClientRect();
            tooltip.style.left = (e.clientX - rect.left + 10) + 'px';
            tooltip.style.top = (e.clientY - rect.top - 10) + 'px';
        });

        point.addEventListener('mouseleave', function() {
            tooltip.style.opacity = '0';
        });
    });
});

