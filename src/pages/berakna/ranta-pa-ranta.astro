<script>
function berakna() {
    const startbelopp = parseFloat(document.getElementById('startbelopp').value);
    const manadsparande = parseFloat(document.getElementById('manadsparande').value);
    const arsranta = parseFloat(document.getElementById('ranta').value) / 100;
    const spartid = parseFloat(document.getElementById('spartid').value);

    // Månadsränta
    const manadsranta = arsranta / 12;
    const antalManader = spartid * 12;

    // Beräkna slutvärde med sammansatt ränta
    // Formel: FV = P(1+r)^n + PMT * [((1+r)^n - 1) / r]
    let slutvarde = startbelopp * Math.pow(1 + manadsranta, antalManader);

    if (manadsparande > 0) {
        slutvarde += manadsparande * ((Math.pow(1 + manadsranta, antalManader) - 1) / manadsranta);
    }

    // Beräkna totalt insatt
    const totaltInsatt = startbelopp + (manadsparande * antalManader);

    // Beräkna räntevinst
    const rantevinst = slutvarde - totaltInsatt;

    // Visa resultat
    document.getElementById('totaltvarde').textContent = Math.round(slutvarde).toLocaleString('sv-SE') + ' kr';
    document.getElementById('insatt').textContent = Math.round(totaltInsatt).toLocaleString('sv-SE') + ' kr';
    document.getElementById('rantevinst').textContent = Math.round(rantevinst).toLocaleString('sv-SE') + ' kr';
    document.getElementById('resultat').style.display = 'block';
}

// Beräkna automatiskt vid sidladdning
window.addEventListener('load', berakna);
</script>

